<!DOCTYPE html>
<html>
    <head>
        <% content_for :title, "Calendar" %>
        <meta charset='utf-8' />
        <link rel='stylesheet' href='fullcalendar/fullcalendar.css' />
        <link href='fullcalendar/fullcalendar.print.css' rel='stylesheet' media='print' />
        <script src='lib/jquery.min.js'></script>
        <script src='lib/moment.min.js'></script>
        <script src='fullcalendar/fullcalendar.js'></script>
        <script>
            $(document).ready(function() {

            $('#calendar').fullCalendar({
                header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,agendaWeek,agendaDay'
                    },
                defaultView: 'month',
                weekends: true,
                defaultDate: '2015-04-20', // stub for testing, remove for production
                editable: true,
                eventLimit: true, // allow "more" link when too many events
                events: [
                    {
                        title: 'Doctor Rodriguez',
                        start: '2015-04-20T14:30:00',
                        end: '2015-04-20T16:30:00'
                    },
                    {
                        title: 'Nurse Ratchet',
                        start: '2015-04-20T14:30:00',
                        end: '2015-04-20T16:30:00'
                    },
                    {
                        title: 'Doctor Jacobson',
                        start: '2015-04-20T16:30:00',
                        end: '2015-04-20T18:30:00'
                    },
                    {
                        title: 'Nurse Ratchet',
                        start: '2015-04-20T17:00:00',
                        end: '2015-04-20T18:30:00'
                    }]
                });
            });
        </script>
        <style>
            body {
                margin: 40px 10px;
                padding: 0;
                font-family: "Helvetica Neue","Lucida Grande",Arial,Verdana,sans-serif;
                font-size: 18px;
            }

            #calendar {
                max-width: 900px;
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <div id='calendar'></div>
    </body>
</html>

