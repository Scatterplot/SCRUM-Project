<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, class: "form-control", :placeholder => "000-000-0000" %>
    </div>  
  </div>
  <div class="form-group">
    <br/>
    <%= f.label :role_id %><strong>/Job Title</strong><br/>
    <%= f.collection_select :role_id, Role.order(:role),:id,:role, include_blank: true, class:"btn btn-primary dropdown-toggle" %>
  </div> 
  <div class="actions"><br />
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    <%= f.submit "clear", :type => "reset", class: "btn btn-default"  %>
    
  </div>
<% end %>

<%= render "devise/shared/links" %>
