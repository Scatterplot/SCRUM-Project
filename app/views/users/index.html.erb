<p id="notice"><%= notice %></p>

<h1>Current User Listing</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% @myrole = Role.find user.role_id unless user.role_id.nil?  %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= @myrole.role unless @myrole.nil? %></td>
        <td><%= link_to 'show', user%></td>
        
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
       <% @myrole = nil  %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New user', new_user_path %>
